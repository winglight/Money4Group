<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:androidsam="http://schemas.android.com/apk/res/com.omdasoft.browser"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<LinearLayout android:orientation="vertical" android:id="@+id/main_layout"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:id="@+id/top_layout" android:layout_height="50dp"
			android:gravity="center" android:layout_alignTop="@+id/home_layout">
			<Spinner android:layout_width="50dp" android:id="@+id/recordTypeSpinner"
				android:prompt="@string/consume_prompt" android:layout_height="wrap_content"
				android:layout_weight="1"></Spinner>
			<Button android:text="" android:id="@+id/addActBtn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/add_act_48"></Button>
			<Button android:text="" android:id="@+id/addUserBtn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/add_user_48"></Button>
			<Button android:text="" android:id="@+id/settingBtn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/settings_48"></Button>
		</LinearLayout>
		<ListView android:id="@+android:id/list"
			android:layout_height="fill_parent" android:layout_width="fill_parent"
			android:transcriptMode="normal" android:stackFromBottom="false"></ListView>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/ad_layout" android:layout_height="wrap_content"
		android:gravity="bottom" android:layout_alignParentBottom="true"
		android:layout_alignBottom="@+id/home_layout">
	</LinearLayout>
</RelativeLayout>
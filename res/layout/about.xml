	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFF"
	android:gravity="center_horizontal"
	>
	<LinearLayout android:layout_width="fill_parent" android:id="@+id/btnLayout" android:layout_height="wrap_content" android:gravity="center_horizontal">
		<Button android:textSize="15sp" android:id="@+id/backBtn" android:layout_width="wrap_content" android:text="@string/backMain" android:layout_height="40dp"></Button>
	</LinearLayout>
	
	<WebView 
	android:id="@+id/about_content" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:textColor="#000"
	android:textSize="20sp"
	/>
	

</LinearLayout>